// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Representative {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  avatar    String?
  createdAt DateTime @default(now())
}

model City {
  id          Int     @id @default(autoincrement())
  name        String
  state       String
  description String
  photoUrl    String?

  Hospital Hospital[]
  Bed      Bed[]
}

model Hospital {
  id       Int     @id @default(autoincrement())
  name     String
  cityId   Int
  type     String
  status   Boolean
  photoUrl String?

  city City  @relation(fields: [cityId], references: [id])
  Bed  Bed[]
}

model Bed {
  id         Int     @id @default(autoincrement())
  numberBeds Int
  hospitalId Int
  cityId     Int
  typeBed    String
  status     Boolean
  photoUrl   String?

  city     City     @relation(fields: [cityId], references: [id])
  hospital Hospital @relation(fields: [hospitalId], references: [id])
}
